---
import Layout from "../layout/Layout.astro"
import Search from "../components/Search.astro"
import CardContainer from "../sections/CardContainer.astro"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="../../public/assets/images/logo-recipes.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Recetas para Todos</title>
	</head>
	<body>
		<Layout>
			<Search></Search>
			<CardContainer></CardContainer>
		</Layout>

	</body>
	<style is:global>
		body{
    		scroll-behavior:smooth;
}
		body::-webkit-scrollbar{
    		width:10px;
		}
		body::-webkit-scrollbar-thumb{
    		background-color: rgb(107, 107, 107);
    		border-radius:20px;
		}
		*{
			box-sizing: border-box;
			padding:0;
			margin:0
		}
		body{
			background-color: rgb(241, 241, 241);
			font-family: 'Inter'
		}
		@font-face {
			font-family: 'Inter';
			src: url("../../public/assets/fonts/inter/Inter-VariableFont_opsz\,wght.ttf");
		}
	</style>
</html>